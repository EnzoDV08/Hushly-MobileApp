rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    match /avatars/{file} {
      // anyone can view avatars (make this authed-only if you want)
      allow read: if true;

      // only allow writes when the filename is exactly "<uid>.jpg"
      allow write: if request.auth != null
                   && file == (request.auth.uid + '.jpg');
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
